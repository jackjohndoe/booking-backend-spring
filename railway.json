{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile",
    "rootDirectory": "booking-backend"
  },
  "deploy": {
    "startCommand": "java -jar booking-0.0.1-SNAPSHOT.jar --spring.profiles.active=staging",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

