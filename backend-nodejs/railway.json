{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfig": {
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs-18_x"]
        },
        "install": {
          "cmds": ["npm ci"]
        },
        "build": {
          "cmds": ["npm run build || true"]
        }
      },
      "staticAssets": [],
      "startCmd": "npm start"
    }
  },
  "deploy": {
    "startCommand": "npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

